model TipoEvento {
  id       Int       @id @default(autoincrement())
  nombre   String
  Espacios Espacio[]
  Eventos  Evento[]
}

model Espacio {
  id            Int        @id @default(autoincrement())
  nombre        String
  tipoDeEvento  TipoEvento @relation(fields: [tipo_eventoId], references: [id], onDelete: Cascade)
  tipo_eventoId Int
  lat           Decimal
  lng           Decimal
  ubicacion     String     @unique
  Eventos       Evento[]
}

model Evento {
  id            Int        @id @default(autoincrement())
  nombre        String
  horarios      String
  Tipo_evento   TipoEvento @relation(fields: [tipo_eventoId], references: [id])
  tipo_eventoId Int
  fecha         String
  pases         String
  sala          String?
  duracion      String
  ubicacion     Espacios?  @relation(fields: [ubicacionId], references: [ubicacion])
  ubicacionId   String?
  director      String?
  ubicacion     Espacio    @relation(fields: [ubicacionId], references: [ubicacion])
  ubicacionId   String
  director      String
  sinopsis      String
  trailer       String?
  reparto       String?
  precio        Int
  img           String?
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
}
