model Tipo_evento {
  id       Int        @id @default(autoincrement())
  nombre   String
  Espacios Espacios[]
  Eventos  Eventos[]
}

model Espacios {
  id            Int         @id @default(autoincrement())
  nombre        String
  tipoDeEvento  Tipo_evento @relation(fields: [tipo_eventoId], references: [id])
  tipo_eventoId Int
  lat           Decimal
  lng           Decimal
  ubicacion     String      @unique
  Eventos       Eventos[]
}

model Eventos {
  id            Int         @id @default(autoincrement())
  nombre        String
  horarios      String
  Tipo_evento   Tipo_evento @relation(fields: [tipo_eventoId], references: [id])
  tipo_eventoId Int
  fecha         String
  pases         String
  sala          String?
  duracion      String
  ubicacion     Espacios?   @relation(fields: [ubicacionId], references: [ubicacion])
  ubicacionId   String?
  director      String?
  sinopsis      String
  trailer       String?
  reparto       String?
  precio        Int
  img           String?
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
}
